<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/details_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="5dp"
        android:background="#000000"
       />

    <TextView
        android:id="@+id/details_common_name"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:padding="3dp"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/details_image_view"
        android:layout_toEndOf="@+id/details_image_view" />

    <TextView
        android:id="@+id/details_latin_name"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:padding="3dp"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/details_common_name"
        android:layout_toRightOf="@+id/details_image_view"
        android:layout_toEndOf="@+id/details_image_view" />

    <TextView
        android:id="@+id/details_num_legs"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:padding="3dp"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/details_latin_name"
        android:layout_toRightOf="@+id/details_image_view"
        android:layout_toEndOf="@+id/details_image_view" />

    <TextView
        android:id="@+id/details_wings"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:padding="3dp"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/details_num_legs"
        android:layout_toRightOf="@+id/details_image_view"
        android:layout_toEndOf="@+id/details_image_view" />

    <TextView
        android:id="@+id/details_color"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:padding="3dp"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/details_wings"
        android:layout_toRightOf="@+id/details_image_view"
        android:layout_toEndOf="@+id/details_image_view" />

    <TextView
        android:id="@+id/details_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="16sp"
        android:scrollbars="vertical"
        android:layout_below="@+id/details_image_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>